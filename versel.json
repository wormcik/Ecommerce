{
  "version": 2,
  "builds": [
    {
      "src": "api/routes.js",  
      "use": "@vercel/node"   
    },
    {
      "src": "public/**/*", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  
      "dest": "/api/routes.js"
    },
    {
      "src": "/(.*)",  
      "dest": "/public/index.html"
    }
  ]
}
